include ../abstract/_variables.pug
doctype html
html(lang="en")
  block changeTitle
    - selected = "Home"
  head
    meta(charset="UTF-8")
    meta(name="author" content="Mina Karam")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="My Portfolio")
    - for(var i = 0; i < myTitle.length; i++)
      - if(myTitle[i] === selected)
        title #{selected} - My Portfolio
    link(rel="icon" href="../content/assets/images/icon.png")
    link(rel="stylesheet" href="../content/css/abstract/all.min.css")
    link(rel="stylesheet" href="../content/css/abstract/progresscircle.css")
    link(rel="stylesheet" href="../content/css/main.css")
  body
    // Start Designing The Website Head
    header
      div(class="top-bar")
        include ../components/navbar.pug
        include ../components/setting.pug
    // Finish Designing The Website Head
    block body
      // Start Designing The Banner Section
      section(class="banner")
          div(class="banner-background")
          div(class="banner-box")
            div(class="banner-box-image")
              img(src="../content/assets/images/mypic.jpg" alt="Mina's Picture")
            div(class="banner-box-image")
              img(src="../content/assets/images/mypicsmall.jpg" alt="Mina's Small Picture")
            div(class="banner-box-text")
              span hi there !
              h2 I'm #[span Mina Karam]
              p I'm an Egyption based User Interface Developer focused on crafting clean &amp; userâ€‘friendly experiences, I am passionate about building excellent software that improves the lives of those around me.
              div(class="banner-box-text-link")
                a(href="about.html")
                  span More About Me
                  i(class="fas fa-user")
      // Finish Designing The Banner Section
    include ../components/preloader.pug
    script(src="../content/js/abstract/jquery-3.5.1.min.js")
    script(src="../content/js/abstract/jquery.hoverdir.min.js")
    script(src="../content/js/abstract/all.min.js")
    script(src="../content/js/abstract/progresscircle.js")
    script(src="../content/js/main.js")